@model Conservice.Models.ActivityLogViewModel

<h1>Activity Log</h1>


<table id="employeeTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Time</th>
            <th>EmployeeName</th>
            <th>ChangeEventType</th>
            <th>Old</th>
            <th>New</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model.ChangeEvents)
        {
            <tr data-id="@ev.EmployeeChangeEventId">
                @*<td>@employee.EmployeeId</td>*@
                <td>@ev.Time</td>
                <td>@ev.EmployeeName</td>
                <td>@ev.ChangeEventType </td>
                <td>@ev.Old</td>
                <td>@ev.New</td>
            </tr>
        }
    </tbody>


</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#employeeTable thead tr').clone(true).appendTo('#employeeTable thead');
            $('#employeeTable thead tr:eq(1) th').each(function (i) {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="Filter ' + title + '" />');

                $('input', this).on('keyup change', function () {
                    if (table.column(i).search() !== this.value) {
                        table
                            .column(i)
                            .search(this.value)
                            .draw();
                    }
                });
            });

            var table = $('#employeeTable').DataTable({
                orderCellsTop: true,
                fixedHeader: true,
                "ordering": false
             //   "order": [[0, "desc"]]
            });

        });
    </script>
}