@{
}

@model Conservice.Models.MetricsViewModel

<h1>Retention Metrics</h1>

<h2>Hired</h2>
<table id="hireTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Year</th>
            <th>Week</th>
            <th>Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.HireReport)
        {
        <tr>
            <td>@entry.Year</td>
            <td>@entry.Week</td>
            <td>@entry.Number</td>
        </tr>
        }
    </tbody>
</table>

<h2>Terminated</h2>
<table id="terminatedTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Year</th>
            <th>Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.TerminatedReport)
        {
        <tr>
            <td>@entry.Year</td>
            <td>@entry.Number</td>
        </tr>
        }
    </tbody>
</table>


